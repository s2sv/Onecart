
<p>User: <%= current_user.username %></p>

<div class = "container">

    <%= simple_form_for(@order) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

   	<div class="field" >
			<%= f.label 'Customer Reference' %>
			<%= f.text_field :customer_ref, class: "form-control"  %>
		</div>


		<div class="field" >
			<%= f.label 'From Address' %>
			<%= f.text_field :from_address, id: :from_autocomplete_address, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Business/Complex Name' %>
			<%= f.text_field :from_complex, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Unit/Floor' %>
			<%= f.number_field :from_unit_no, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Name' %>
			<%= f.text_field :from_name, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Phone' %>
			<%= f.text_field :from_phone, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Email' %>
			<%= f.text_field :from_email, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Special Instructions' %>
			<%= f.text_field :from_special_instructions, class: "form-control"  %>
		</div>

			<%= f.hidden_field :from_street_number, id: :street_number, class: "form-control" %>

			<%= f.hidden_field :from_route, id: :route, class: "form-control" %>

			<%= f.hidden_field :from_sublocality, id: :sublocality, class: "form-control" %>

			<%= f.hidden_field :from_locality, id: :locality, class: "form-control" %>

			<%= f.hidden_field :from_administrative_area_level_1, id: :administrative_area_level_1, class: "form-control" %>

			<%= f.hidden_field :from_postal_code, id: :postal_code, class: "form-control" %>

			<%= f.hidden_field :from_country, id: :country, class: "form-control" %>

			<%= f.hidden_field :from_latitude, id: :from_latitude, class: "form-control" %>

			<%= f.hidden_field :from_longitude, id: :from_longitude, class: "form-control" %>
	
			<%= f.hidden_field :from_faddress, id: :from_faddress, class: "form-control" %>
   
    <div class="form-actions">
        <%= f.button :submit %>
    </div>

    <% end %>

	<%= link_to 'Show', @order %> |
	<%= link_to 'Back', orders_path %>

</div>