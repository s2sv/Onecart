
<p>User: <%= current_user.username %></p>

<div class = "container">

    <%= simple_form_for(@order) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

		<div class="field">
			<%= f.label 'To Address' %>
			<%= f.text_field :to_address, id: :to_autocomplete_address, class: "form-control" %>
		</div>

		<div class="field" >
			<%= f.label 'Business/Complex Name' %>
			<%= f.text_field :to_complex, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Unit/Floor' %>
			<%= f.number_field :to_unit_no, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Name' %>
			<%= f.text_field :to_name, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Phone' %>
			<%= f.text_field :to_phone, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Email' %>
			<%= f.text_field :to_email, class: "form-control"  %>
		</div>

		<div class="field" >
			<%= f.label 'Special Instructions' %>
			<%= f.text_field :to_special_instructions, class: "form-control"  %>
		</div>

			<%= f.hidden_field :to_street_number, id:  :to_street_number, class: "form-control" %>

			<%= f.hidden_field :to_route, id: :to_route, class: "form-control" %>

			<%= f.hidden_field :to_sublocality, id: :to_sublocality, class: "form-control" %>

			<%= f.hidden_field :to_locality, id: :to_locality, class: "form-control" %>

			<%= f.hidden_field :to_administrative_area_level_1, id: :to_administrative_area_level_1, class: "form-control" %>

			<%= f.hidden_field :to_postal_code, id: :to_postal_code, class: "form-control" %>

		    <%= f.hidden_field :to_country, id: :to_country, class: "form-control" %>

			<%= f.hidden_field :to_latitude, id: :to_latitude, class: "form-control" %>

			<%= f.hidden_field :to_longitude, id: :to_longitude, class: "form-control" %>

			<%= f.hidden_field :to_faddress, id: :to_faddress, class: "form-control" %>

	<div class="form-actions">
        <%= f.button :submit %>
    </div>

    <% end %>

    <%= link_to 'Show', @order %> |
    <%= link_to 'Back', orders_path %>

</div>


